{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/niyojaka/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/niyojaka/build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/niyojaka/$1"
    }
  ]
}
